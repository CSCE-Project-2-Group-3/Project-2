<h1>Expense Tracker Home</h1>

<% if current_user %>
  <h2>Welcome, <%= current_user.email %>!</h2>

  <p>
    <%= link_to "Go to Expense Table", expenses_path, class: "btn btn-primary" %>
  </p>

  <p>
    <%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-secondary" %>
  </p>

  <p>
    <%= button_to "Logout", destroy_user_session_path,
          method: :delete,
          form: { data: { turbo: false }, style: "display:inline" },
          class: "btn btn-danger" %>
  </p>

<% else %>
  <p>
    <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>
    <%= link_to "Create Account", new_user_registration_path, class: "btn btn-secondary" %>
  </p>
<% end %>