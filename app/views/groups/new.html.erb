<%# 1. "Back" link, aligned with the card below %>
<div class="max-w-md mx-auto mb-4">
  <%= link_to "â† Back to Groups", groups_path, class: "text-sm font-medium transition-colors",
              style: "color: var(--tamu-maroon);",
              onmouseover: "this.style.color='#a17b3e'",
              onmouseout: "this.style.color='var(--tamu-maroon)'" %>
</div>

<%# 2. Main "Create Group" Card %>
<div class="max-w-md mx-auto p-8 bg-white shadow-lg rounded-lg border border-gray-200">
  <h2 class="text-3xl font-extrabold mb-6 text-center" style="color: var(--tamu-maroon);">
    Create a New Group
  </h2>

  <%= form_with model: @group, local: true, class: "space-y-6" do |f| %>
    
    <%# --- Styled Error Messages --- %>
    <% if @group.errors.any? %>
      <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
        <strong class="font-bold"><%= pluralize(@group.errors.count, "error") %>:</strong>
        <ul class="mt-2 list-disc list-inside text-sm">
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# --- Group Name Field --- %>
    <div>
      <%= f.label :name, "Group name", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, placeholder: "e.g., Spring Break Trip", class: "form-input mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 sm:text-sm" %>
    </div>

    <%# --- Submit Button --- %>
    <div class="actions">
      <%= f.submit 'Create Group', class: "w-full btn-maroon font-semibold py-2 px-4 rounded-lg cursor-pointer transition duration-150 ease-in-out" %>
    </div>
  <% end %>
</div>
