<h2>Conversation with <%= @other_user.full_name.presence || @other_user.email %></h2>

<div id="messages">
  <% if @messages.any? %>
    <% @messages.each do |msg| %>
      <div class="message" id="message-<%= msg.id %>">
        <p><strong><%= msg.user.full_name || msg.user.email %>:</strong> <%= msg.body %></p>
        <% if msg.quoted_expense %>
          <div class="quoted-expense">
            <em>Quoted Expense:</em>
            <div>
              <strong><%= msg.quoted_expense.title %></strong> —
              $<%= msg.quoted_expense.amount %> on <%= msg.quoted_expense.spent_on %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>No messages yet</p>
  <% end %>
</div>

<hr>

<h3>Send a new message</h3>

<%= form_tag messages_path(conversation_id: @conversation.id), method: :post do %>
  <div>
    <label for="message_body">Message</label><br>
    <textarea id="message_body" name="message[body]" rows="3" required></textarea>
  </div>

  <div>
    <label for="message_quoted_expense_id">Quote an expense (optional)</label><br>
    <select id="message_quoted_expense_id" name="message[quoted_expense_id]">
      <option value="">— none —</option>
      <% @expenses.each do |exp| %>
        <option value="<%= exp.id %>"><%= exp.title %> — $<%= exp.amount %> on <%= exp.spent_on %></option>
      <% end %>
    </select>
  </div>

  <div style="margin-top:8px;">
    <input type="submit" value="Send" class="btn btn-success">
  </div>
<% end %>
