<div class="bg-white rounded-lg shadow-md p-6 max-w-lg mx-auto">
  <h1 class="text-3xl font-bold mb-6" style="color: var(--tamu-gray-800);">Add New Category</h1>

  <%= form_with(model: @category, local: true, class: "space-y-6") do |form| %>
    
    <% if @category.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Oops!</strong>
        <span class="block sm:inline"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</span>
        <ul class="mt-2 list-disc list-inside text-sm">
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Category Name", class: "block text-sm font-medium mb-1", style: "color: var(--tamu-gray-700);" %>
      <%= form.text_field :name, 
          required: true, 
          class: "form-input w-full block border border-gray-300 rounded-md shadow-sm py-2 px-3 sm:text-sm",
          placeholder: "e.g. Food, Travel, Utilities" %>
    </div>

    <div class="flex items-center space-x-4">
      <%= form.submit "Save Category", class: "btn-maroon py-2 px-4 rounded-lg font-semibold cursor-pointer" %>
      
      <%= link_to "Back to Add Expense", 
          new_expense_path, 
          class: "font-medium text-sm text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>
</div>
